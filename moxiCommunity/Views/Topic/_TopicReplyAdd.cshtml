@using moxiCommunity.ViewModels
@model TopicReplyAddModel

@if (User.Identity.IsAuthenticated)
{

    <div id="topicReply">
        <p><label>发表评论 </label><span class="info"> 文明上网理性发言</span><span class="pull-right info">@ViewData["total"] 条评论</span></p>
        @using (Html.BeginForm("Reply", "Topic", FormMethod.Post, new { @class = "form-horizontal addForm" }))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(m => m.topicID)
            <div>
                @Html.TextAreaFor(m => m.body, new { @class = "form-control moxi-border", @rows = "5" })
                @Html.ValidationMessageFor(m => m.body, "", new { @class = "text-danger" })

            </div>
            
            <div class="text-right" style="margin-top:10px;"><input type="submit" value="发表" class="btn btn-moxiDefault" /></div>

        }

    </div>
} else {
    @Html.Partial("_LoginButton")
}

