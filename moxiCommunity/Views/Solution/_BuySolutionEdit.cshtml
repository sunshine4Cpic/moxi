@using moxiCommunity.ViewModels
@model BuySolutionEditModel



@using (Html.BeginForm("Edit", "Solution", FormMethod.Post, new { id = "new_topic", @class = "form-horizontal addForm" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.ID)
    <div class="modal-header">
        <button type="button" class="close"
                data-dismiss="modal" aria-hidden="true">
            &times;
        </button>
        <h4>
            修改解决方案
        </h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            @Html.LabelFor(m => m.goodsLink, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.goodsLink, new { @class = "form-control", @placeholder = "" })
                @Html.ValidationMessageFor(m => m.goodsLink, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.body, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextAreaFor(m => m.body, new { @class = "form-control", @placeholder = "所填内容不超过500字", @rows = "10" })
                @Html.ValidationMessageFor(m => m.body, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default"
                data-dismiss="modal">
            关闭
        </button>
        <button type="submit" class="btn btn-primary">
            确认修改
        </button>
    </div>
}
